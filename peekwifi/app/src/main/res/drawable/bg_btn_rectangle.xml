<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="@color/colorBase"/>
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <item android:left="3.2dp" android:top="3.2dp" android:right="3.2dp" android:bottom="3.2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorBase"/>
                    <corners android:radius="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="@color/colorBase"/>
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <item android:left="3.2dp" android:top="3.2dp" android:right="3.2dp" android:bottom="3.2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPress"/>
                    <corners android:radius="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
