<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="5dp"/>
                    <stroke android:width="4dp" android:color="@color/colorText"/>
                </shape>
            </item>
            <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
                <shape>
                    <corners android:radius="2dp"/>
                    <solid android:color="@color/colorText"/>
                    <stroke android:width="2dp" android:color="@color/nothing"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="5dp"/>
                    <stroke android:width="4dp" android:color="@color/btn_press"/>
                </shape>
            </item>
            <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
                <shape>
                    <corners android:radius="2dp"/>
                    <solid android:color="@color/btn_press"/>
                    <stroke android:width="2dp" android:color="@color/nothing"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
