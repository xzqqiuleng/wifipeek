<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/updatep_title"
        style="@style/textSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/downloading" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/img_btn_bg"
        android:clickable="true" />

    <View
        android:id="@+id/fengexian"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/updatep_title"
        android:layout_marginTop="10dp"
        android:background="@color/colorview" />

    <ProgressBar
        android:id="@+id/update_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fengexian"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:max="100" />

    <TextView
        android:id="@+id/pro_num1"
        style="@style/small_textSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_progressBar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="0%" />

    <TextView
        android:id="@+id/pro_num2"
        style="@style/small_textSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_progressBar"
        android:layout_alignRight="@+id/pro_num1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="0/100" />
</RelativeLayout>
