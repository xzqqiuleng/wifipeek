<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">

    <TextView
        style="@style/seekBar_text"
        android:padding="3dp"
        android:text="视频信息配置" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/half_spacerlayer"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/seekBar_text"
                android:text="地址:" />

            <EditText
                android:id="@+id/haikang_ip"
                style="@style/Setting_edt"
                android:digits="0123456789."
                android:inputType="number"
                android:maxWidth="100dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/seekBar_text"
                android:text="端口:" />

            <EditText
                android:id="@+id/haikang_port"
                style="@style/Setting_edt"
                android:inputType="number"
                android:maxWidth="100dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/half_spacerlayer"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/seekBar_text"
                android:text="用户名:" />

            <EditText
                android:id="@+id/haikang_account"
                style="@style/Setting_edt"
                android:maxWidth="100dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/seekBar_text"
                android:text="密码:" />

            <EditText
                android:id="@+id/haikang_password"
                style="@style/Setting_edt"
                android:inputType="text"
                android:maxWidth="100dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/seekBar_text"
                android:text="子码流:" />

            <com.peek.camera.view.view.SwitchButton xmlns:ns1="http://schemas.android.com/apk/res-auto"
                xmlns:ns2="http://schemas.android.com/apk/res-auto"
                android:id="@+id/haikang_zimaliu"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                ns1:kswBackColor="#ccc"
                ns2:kswTintColor="@color/colorText" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/seekBar_text"
        android:padding="3dp"
        android:text="控制信息配置"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/half_spacerlayer"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/seekBar_text"
                android:text="地址:" />

            <EditText
                android:id="@+id/socket_ip"
                style="@style/Setting_edt"
                android:maxWidth="100dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/seekBar_text"
                android:text="端口:" />

            <EditText
                android:id="@+id/socket_port"
                style="@style/Setting_edt"
                android:inputType="number"
                android:maxWidth="100dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/seekBar_text"
        android:padding="3dp"
        android:text="wifi信息配置" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/half_spacerlayer"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/seekBar_text"
                android:text="名称:" />

            <EditText
                android:id="@+id/wifi_ssid"
                style="@style/Setting_edt"
                android:digits="0123456789."
                android:inputType="number"
                android:maxWidth="80dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/seekBar_text"
                android:text="密码:" />

            <EditText
                android:id="@+id/wifi_password"
                style="@style/Setting_edt"
                android:maxWidth="80dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/seekBar_text"
                android:text="wifi自动连接:" />

            <com.peek.camera.view.view.SwitchButton xmlns:ns3="http://schemas.android.com/apk/res-auto"
                xmlns:ns4="http://schemas.android.com/apk/res-auto"
                android:id="@+id/wifi_isConnect_auto"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                ns3:kswBackColor="#ccc"
                ns4:kswTintColor="@color/colorText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/seekBar_text"
                android:text="调试:" />

            <com.peek.camera.view.view.SwitchButton xmlns:ns5="http://schemas.android.com/apk/res-auto"
                xmlns:ns6="http://schemas.android.com/apk/res-auto"
                android:id="@+id/permission2just"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                ns5:kswBackColor="#ccc"
                ns6:kswTintColor="@color/colorText" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/myHorizontalLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/set_sure"
            style="@style/Setting_sureTxt"
            android:text="确定" />

        <View style="@style/myVerticalLine" />

        <TextView
            android:id="@+id/set_reset"
            style="@style/Setting_sureTxt"
            android:text="默认值" />

        <View style="@style/myVerticalLine" />

        <TextView
            android:id="@+id/set_cancel"
            style="@style/Setting_sureTxt"
            android:text="取消" />
    </LinearLayout>
</LinearLayout>
