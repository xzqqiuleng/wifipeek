<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/updatedialog_title"
        style="@style/textSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="是否升级App至版本 0.0" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/img_btn_bg"
        android:clickable="true" />

    <View
        android:id="@+id/fengexian"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/updatedialog_title"
        android:layout_marginTop="10dp"
        android:background="@color/colorview" />

    <TextView
        android:id="@+id/update_detail"
        style="@style/small_textSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fengexian"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp" />

    <View
        android:id="@+id/fengexian2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/update_detail"
        android:layout_marginTop="10dp"
        android:background="@color/colorview" />

    <LinearLayout
        android:id="@+id/btn_linear"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/fengexian2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/update_cancel"
            style="@style/small_textSet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/img_btn_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/cancel" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorview" />

        <TextView
            android:id="@+id/update_sure"
            style="@style/small_textSet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/img_btn_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/sure" />
    </LinearLayout>
</RelativeLayout>
