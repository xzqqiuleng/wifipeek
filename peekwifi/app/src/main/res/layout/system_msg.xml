<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/sys_title"
        style="@style/textSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/systemInfo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/img_btn_bg"
        android:clickable="true" />

    <View
        android:id="@+id/fengexian"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/sys_title"
        android:layout_marginTop="10dp"
        android:background="@color/colorview" />

    <TextView
        android:id="@+id/xinghao_text"
        style="@style/small_textSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fengexian"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/xinghao" />

    <TextView
        android:id="@+id/xinghao_text_name"
        style="@style/small_textSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/xinghao_text"
        android:layout_alignRight="@+id/xinghao_text"
        android:layout_marginRight="20dp"
        android:text="PEEK2S" />

    <TextView
        android:id="@+id/banbenhao"
        style="@style/small_textSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xinghao_text"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="@string/version" />

    <TextView
        android:id="@+id/sys_version"
        style="@style/small_textSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/banbenhao"
        android:layout_alignRight="@+id/banbenhao"
        android:layout_marginRight="20dp"
        android:text="0.0" />

    <TextView
        android:id="@+id/shengchanshang"
        style="@style/small_textSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banbenhao"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="@string/shengchanPerson"
        android:visibility="visible" />

    <TextView
        android:id="@+id/manufacturer_name"
        style="@style/small_textSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/shengchanshang"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/shengchanshang"
        android:gravity="right"
        android:text="@string/myComputor"
        android:visibility="visible" />
</RelativeLayout>
