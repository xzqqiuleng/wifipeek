<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_record_editor_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/bottom_menu"
    android:layout_marginBottom="@dimen/record_head_editor_container_marginbottom"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/record_head_editor_marginbottom"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/dialog_record_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:minWidth="@dimen/recordTvWidth"
            android:padding="5dp"
            android:text="@string/record_task_name_e"
            android:textColor="@color/colorText" />

        <EditText
            android:id="@+id/record_task_name_edt"
            style="@style/dialog_record_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/bg_dialog_editext" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                style="@style/dialog_record_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="@dimen/recordTvWidth"
                android:padding="5dp"
                android:text="@string/record_task_start_e"
                android:textColor="@color/colorText" />

            <EditText
                android:id="@+id/record_task_start_edt"
                style="@style/dialog_record_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_editext" />

            <TextView
                style="@style/dialog_record_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="@dimen/recordTvWidth"
                android:padding="5dp"
                android:text="@string/record_task_end_e"
                android:textColor="@color/colorText" />

            <EditText
                android:id="@+id/record_task_end_edt"
                style="@style/dialog_record_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_editext" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/record_head_editor_marginbottom"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/record_task_id_tv"
            style="@style/dialog_record_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:minWidth="@dimen/recordTvWidth"
            android:padding="5dp"
            android:text="@string/record_task_id_e"
            android:textColor="@color/colorText" />

        <EditText
            android:id="@+id/record_task_id_edt"
            style="@style/dialog_record_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/bg_dialog_editext" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                style="@style/dialog_record_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="@dimen/recordTvWidth"
                android:padding="5dp"
                android:text="@string/record_task_direction_e"
                android:textColor="@color/colorText" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4">

                <com.peek.camera.view.view.MySpinner
                    android:id="@+id/record_task_direction_sp"
                    style="@style/dialog_record_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_dialog_editext"
                    android:clickable="true"
                    android:focusable="true" />

                <EditText
                    android:id="@+id/record_task_direction_edt"
                    style="@style/dialog_record_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edt_white"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                style="@style/dialog_record_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="@dimen/recordTvWidth"
                android:padding="5dp"
                android:text="@string/record_task_sort_e"
                android:textColor="@color/colorText" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4">

                <com.peek.camera.view.view.MySpinner
                    android:id="@+id/record_task_sort_sp"
                    style="@style/dialog_record_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_dialog_editext"
                    android:clickable="true"
                    android:focusable="true" />

                <EditText
                    android:id="@+id/record_task_sort_edt"
                    style="@style/dialog_record_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edt_white"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/record_head_editor_marginbottom"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/dialog_record_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:minWidth="@dimen/recordTvWidth"
            android:padding="5dp"
            android:text="@string/record_task_people_e"
            android:textColor="@color/colorText" />

        <EditText
            android:id="@+id/record_task_people_edt"
            style="@style/dialog_record_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/bg_dialog_editext" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                style="@style/dialog_record_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="@dimen/recordTvWidth"
                android:padding="5dp"
                android:text="@string/record_task_diameter_e"
                android:textColor="@color/colorText" />

            <EditText
                android:id="@+id/record_task_diameter_edt"
                style="@style/dialog_record_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/bg_dialog_editext"
                android:inputType="number" />

            <TextView
                style="@style/dialog_record_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="@dimen/recordTvWidth"
                android:padding="5dp"
                android:text="@string/record_task_guancai_e"
                android:textColor="@color/colorText" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4">

                <com.peek.camera.view.view.MySpinner
                    android:id="@+id/record_task_guancai_sp"
                    style="@style/dialog_record_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_dialog_editext"
                    android:clickable="true"
                    android:focusable="true" />

                <EditText
                    android:id="@+id/record_task_guancai_edt"
                    style="@style/dialog_record_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edt_white"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/record_head_editor_marginbottom"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/dialog_record_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:minWidth="@dimen/recordTvWidth"
            android:padding="5dp"
            android:text="@string/record_task_place_e"
            android:textColor="@color/colorText" />

        <EditText
            android:id="@+id/record_task_place_edt"
            style="@style/dialog_record_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/bg_dialog_editext" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                style="@style/dialog_record_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="@dimen/recordTvWidth"
                android:padding="5dp"
                android:text="@string/record_task_computer_e"
                android:textColor="@color/colorText" />

            <EditText
                android:id="@+id/record_task_conputer_edt"
                style="@style/dialog_record_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/bg_dialog_editext" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
